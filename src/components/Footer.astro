---
import { formatDate, SITE_URL, ICP_RECORD } from '../consts';
const today = formatDate(new Date());
import Button from "./Button.astro";
import { getCollection } from "astro:content";

const blogEntries = await getCollection("blog");
const collectionEntries = await getCollection("collection");

// 确保按发布日期排序，只显示最新的5篇文章
const sortedBlogEntries = [...blogEntries].sort((a, b) => {
  return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime();
});

const sortedCollectionEntries = [...collectionEntries].sort((a, b) => {
  return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime();
});

// 严格限制最多显示5个文章
const limitedBlogEntries = sortedBlogEntries.slice(0, 5);
const limitedCollectionEntries = sortedCollectionEntries.slice(0, 5);
// Helper para derivar slug desde id (remueve directorio y extensión)
const toSlugFromId = (id: string) =>
  id.replace(/^.*\//, "").replace(/\.(md|mdx)$/i, "");
---

<footer
  class="relative bg-muted pt-10 w-full md:pb-6 border-t flex flex-col md:flex-row gap-20 z-10 max-w-full overflow-hidden"
>
  <div class="container px-5 mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="md:w-1/2 flex flex-col items-start gap-6 col-span-1">
      <p class="text-3xl font-semibold font-fugaz">
          对我的作品感兴趣？
      </p>
      <Button text="联系我" href="/contact" />
    </div>
    <div class="md:w-1/2 flex flex-col justify-between md:pr-20 col-span-1">
      <p>
        摄影师，数码爱好者，喜欢分享自己的工作和生活。 
      </p>
      <div class="flex justify-between items-center mt-20 mb-6">
        <a href={SITE_URL} target="_blank" class="">deeio &reg;</a>
        <p>{today}</p>
      </div>
    </div>
    <hr class="col-span-1 md:col-span-2" />
    <div
      class="col-span-1 md:col-span-2 justify-between grid md:grid-cols-3 px-6 items-start gap-6 md:gap-0"
    >
      <div>
        <h2>导航</h2>
        <ul class="font-bold">
          <li><a href="/" class="">首页</a></li>
          <li><a href="/about" class="">关于我</a></li>
          <li><a href="/blog" class="">博客</a></li>
          <li><a href="/collection" class="">摄影</a></li>
          <li><a href="/contact" class="">联系我</a></li>
        </ul>
      </div>
      <div>
        <h2>博客</h2>
        <ul>
          {
            limitedBlogEntries.map((entry: any) => (
              <li class="font-bold">
                <a href={`/blog/${entry.id}`} class="">
                  {entry.data?.title ?? entry.id}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div>
        <h2>摄影</h2>
        <ul>
          {
            limitedCollectionEntries.map((entry: any) => (
              <li class="font-bold">
                <a href={`/collection/${entry.id}`} class="">
                  {entry.data?.title ?? entry.id}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
    <hr class="col-span-1 md:col-span-2" />
    <p class="col-span-1 md:col-span-2 text-center text-xs">
    {ICP_RECORD}
    </p>
  </div>
</footer>
